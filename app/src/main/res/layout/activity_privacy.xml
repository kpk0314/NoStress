<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_background"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="108dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="12.8dp"
            android:src="@drawable/icon_logo_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="63dp"
            android:gravity="center"
            android:text="회원가입을 축하합니다! 정확한 스트레스\n측정을 위하여 아래 정보를 입력해주세요!"
            android:textColor="@color/black"
            android:textSize="14sp" />

            <EditText
                android:id="@+id/input_birth"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boxinput"
                android:hint="생년월일"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="#b4b3b3"
                android:textSize="14sp"
                android:focusable="false"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/input_gender"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boxinput"
                android:hint="성별"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="#b4b3b3"
                android:textSize="14sp"
                android:focusable="false"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/input_height"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boxinput"
                android:hint="키"
                android:inputType="numberSigned"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="#b4b3b3"
                android:textSize="14sp"
                android:focusable="false"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/input_weight"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boxinput"
                android:hint="몸무게"
                android:inputType="numberSigned"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="#b4b3b3"
                android:textSize="14sp"
                android:focusable="false"
                android:textStyle="normal" />


        <TextView
            android:id="@+id/find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="27.3dp"
            android:text="아래 버튼을 누르면 Stless의 개인 정보\n취급 방침 및 이용 약관에 동의하게 됩니다. "
            android:textColor="#595757"
            android:gravity="center"
            android:textSize="12sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="5.8dp"
            android:background="@drawable/loginbutton"
            android:text="입력완료"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>


    </LinearLayout>
</ScrollView>